<!-- Views/Shared/_ExampleModal.cshtml -->
<div class="modal fade" id="EditFactModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Fact</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/Fact/EditFact">
            <div class="modal-body">
                    <input type="hidden" id="editFactID" name="Id" />
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Fact</span>
                    </div>
                        <input type="text" class="form-control" name="Fact" id="editFactName">
                </div>
                

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Class</span>
                    </div>
                        <input type="text" class="form-control" name="IconClassName" id="editFactClass">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Number</span>
                        </div>
                        <input type="number" class="form-control" name="Num" id="editFactNum">
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-success" value="Save Changes" />
            </div>
            </form>
        </div>
    </div>
</div>
